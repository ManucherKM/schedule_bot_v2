{
	"compilerOptions": {
		"target": "ES2016",
		"module": "CommonJS",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"removeComments": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
